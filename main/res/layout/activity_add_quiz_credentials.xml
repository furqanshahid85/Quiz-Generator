<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.furqanshahid.quizzer.AddQuizCredentials">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="29dp"
        android:text="Enter Credentials for the new Quiz"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quizTitleTextView"
        android:layout_alignBottom="@+id/quizTitleTextView"
        android:layout_alignStart="@+id/textView5"
        android:text="Quiz Title: "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/quizTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quizDescriptonTextView"
        android:layout_alignStart="@+id/quizDescriptonTextView"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="type here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quizDescriptonTextView"
        android:layout_alignBottom="@+id/quizDescriptonTextView"
        android:layout_alignStart="@+id/textView6"
        android:text="Quiz Description: "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/quizDescriptonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quizMarksTextView"
        android:layout_alignStart="@+id/quizMarksTextView"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="type here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quizMarksTextView"
        android:layout_alignBottom="@+id/quizMarksTextView"
        android:layout_alignStart="@+id/textView7"
        android:text="Quiz Marks: "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="123dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@+id/quizATimeTextView"
        android:layout_alignBottom="@+id/quizATimeTextView"
        android:layout_alignStart="@+id/textView8"
        android:text="Quiz Attempt Time: "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="346dp" />

    <EditText
        android:id="@+id/quizMarksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quizATimeTextView"
        android:layout_alignStart="@+id/quizATimeTextView"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="type here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/quizATimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveBtn"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView9"
        android:ems="10"
        android:hint="type here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="Save"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="416dp" />
</RelativeLayout>
